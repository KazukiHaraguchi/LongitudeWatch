<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.longitudewatch.WorldClock" >

    <Button
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="現在時刻"
        android:textSize="20dp" />

    <Button
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stopwatch"
        android:layout_alignBottom="@+id/stopwatch"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/clock"
        android:text="タイマー"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/worldclock"
        android:layout_alignBottom="@+id/worldclock"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/timer"
        android:text="ストップウォッチ"
        android:textSize="20dp" />

    <Button
        android:id="@+id/worldclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/clock"
        android:layout_alignBottom="@+id/clock"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/stopwatch"
        android:text="世界時計"
        android:textSize="20dp" />
    
    <TextClock
        android:id="@+id/jpClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="60sp"
        android:timeZone="GMT+900"
        android:format24Hour="HH:mm:ss"
        android:format12Hour="hh:mm:ss" />
    
    <TextView
        android:id="@+id/jpClockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="70dp"
        android:text="日本"
        android:textSize="30dp" />

    <TextClock
        android:id="@+id/usClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textSize="60sp"
        android:timeZone="GMT-500"
        android:format24Hour="HH:mm:ss"
        android:format12Hour="hh:mm:ss" />
    
    <TextView
        android:id="@+id/usClockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="40dp"
        android:text="ニューヨーク"
        android:textSize="25dp" />
    
</RelativeLayout>
