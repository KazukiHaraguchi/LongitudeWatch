<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.longitudewatch.Timer" >

    <Button
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="現在時刻"
        android:textSize="20dp" />

    <Button
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stopwatch"
        android:layout_alignBottom="@+id/stopwatch"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/clock"
        android:text="タイマー"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/worldclock"
        android:layout_alignBottom="@+id/worldclock"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/timer"
        android:text="ストップウォッチ"
        android:textSize="20dp" />

    <Button
        android:id="@+id/worldclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/clock"
        android:layout_alignBottom="@+id/clock"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/stopwatch"
        android:text="世界時計"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ClockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="100dp" />

    <Button
        android:id="@+id/set"
        android:layout_width="@integer/TimerSet_width"
        android:layout_height="@integer/TimerSet_height"
        android:layout_alignLeft="@+id/CloclText"
        android:layout_below="@+id/CloclText"
        android:layout_marginTop="142dp"
        android:text="SetTime"
        android:textSize="50dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="@integer/TimerStart_width"
        android:layout_height="@integer/TimerStart_height"
        android:layout_alignBottom="@+id/set"
        android:layout_alignRight="@+id/CloclText"
        android:text="Start"
        android:textSize="50dp" />

</RelativeLayout>
